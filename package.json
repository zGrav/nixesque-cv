		"eslint-plugin-flowtype": "^3.12.2",
		"eslint-plugin-flowtype-errors": "^4.1.0",
		"eslint-plugin-import": "^2.10.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-react": "^7.7.0",
		"eventsource-polyfill": "^0.9.6",
		"expect": "^24.8.0",
		"fetch-mock": "^7.3.9",
		"file-loader": "^4.1.0",
		"flow-bin": "^0.104.0",
		"handlebars": "^4.7.7",
		"handlebars-loader": "^1.7.0",
