		"babel-preset-env": "^1.6.1",
		"babel-preset-flow": "^6.23.0",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-0": "^6.16.0",
		"cross-env": "^5.1.4",
		"webpack": "^4.5.0"
	},
	"devDependencies": {
		"@bitchcraft/injector": "1.0.3",
		"autoprefixer": "^9.6.1",
		"babel-cli": "^6.18.0",
		"babel-core": "^6.20.0",
		"babel-eslint": "^10.0.2",
		"babel-loader": "^7.1.5",
